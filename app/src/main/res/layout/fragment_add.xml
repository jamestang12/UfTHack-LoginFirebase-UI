<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/whi"
    android:layout_height="match_parent">

    <View

        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginStart="0dp">


    </View>


    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:text="ADD TIME"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="16dp">

    </TextView>

    <ImageView
        android:id="@+id/face"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/face"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.218">

    </ImageView>


    <LinearLayout

        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/face"
        android:padding="30dp"
        android:orientation="vertical"
        android:background="@drawable/bg_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginBottom="24dp"

            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="14dp"
                android:src="@drawable/ic_done_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>

            <TextView
                android:text="Tips 1"
                android:textColor="#3D414E"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            </TextView>





        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="24dp"

            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="14dp"
                android:src="@drawable/ic_done_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>

            <TextView

                android:text="Tips 1"
                android:textColor="#3D414E"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            </TextView>



        </LinearLayout>

        <View
            android:layout_marginBottom="24dp"
            android:background="#f4f4f4"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </View>

        <EditText
            android:id="@+id/amount"
            android:text="Enter amount"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>
        <Button
            android:id="@+id/timebottom"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_sign_in_background"
            android:text="Select Time"
            android:textColor="#FFF"
            android:layout_width="200dp"
            android:layout_height="45dp">

        </Button>

        <Button
            app:layout_constraintTop_toBottomOf="@+id/timebottom"
            android:id="@+id/enter"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_register_background"
            android:text="Enter"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.89">

        </Button>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>