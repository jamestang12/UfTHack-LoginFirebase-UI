<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:background="@drawable/wall5"
            android:layout_width="match_parent"
            android:layout_height="250dp">

        </View>

        <LinearLayout
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/icon"
                    android:elevation="1dp"
                    android:src="@drawable/gold"
                    android:layout_width="100dp"
                    android:layout_height="100dp">

                </de.hdodenhof.circleimageview.CircleImageView>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="65dp"
                        app:cardCornerRadius="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <ImageView
                                android:src="@drawable/croner"
                                android:layout_width="match_parent"
                                android:layout_height="95dp">

                            </ImageView>

                            <TextView
                                android:id="@+id/name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="30dp"
                                android:text="Sapphire League"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black">

                            </TextView>

                            <TextView
                                android:id="@+id/pro"
                                android:layout_below="@+id/name"
                                android:layout_centerHorizontal="true"
                                android:text="Top 10 advance to the next league"
                                android:textColor="@android:color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>

                            <TextView
                                android:id="@+id/pro2"
                                android:layout_below="@+id/pro"
                                android:layout_centerHorizontal="true"
                                android:text="1 d 2h 7m"
                                android:textColor="@color/colorAccent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">


                            </TextView>

                            <TextView
                                android:text="-LOGO-"
                                android:textColor="@color/colorAccent"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/pro2"
                                android:layout_marginTop="10sp"
                                android:layout_width="50sp"
                                android:layout_height="50sp">

                            </TextView>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </RelativeLayout>



        </LinearLayout>


    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/contact_recyclerview">

  </androidx.recyclerview.widget.RecyclerView>





</LinearLayout>